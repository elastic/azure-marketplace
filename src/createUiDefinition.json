            "constraints": {
              "required": false,
              "regex": "^[0-9a-zA-Z][0-9a-zA-Z\\-]{0,4}$",
              "validationMessage": "Host name prefix must start with an alphanumeric character and can contain alphanumeric or hyphen characters, up to 5 characters in length"
