            "type": "Microsoft.Common.TextBox",
            "label": "Cluster name",
            "defaultValue": "",
            "toolTip": "Name your Elasticsearch cluster.",
            "constraints": {
              "required": true,
              "regex": "[^\\s]+$",
              "validationMessage": "Cluster has trailing whitespace"
            }
          },
